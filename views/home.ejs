<%- include('./partials/header') %>
<h1>Home</h1>
<p><%= homeContent %></p>

<% postContent.forEach((item)=>{ %>
    
    <h1><%= item.title %></h1>
    <% if(item.content.length<100) { %>
        <p><%= item.content %></p>
    <% }else{ %>
    <p><%= item.content.substring(0,100)+"..." %><a href="/posts/<%= item._id %>">Read More</a></p>

<% }}) %>

<%- include('./partials/footer') %>